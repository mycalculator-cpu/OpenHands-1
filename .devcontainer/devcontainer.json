// OpenHands + Pollinations AI - Codespace Configuration
{
	"name": "OpenHands + Pollinations AI",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers-extra/features/poetry:2": {},
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"postCreateCommand": ".devcontainer/setup.sh",
	"runArgs": ["--add-host=host.docker.internal:host-gateway"],
	"forwardPorts": [3000, 8000],
	"portsAttributes": {
		"3000": {
			"label": "OpenHands Frontend",
			"onAutoForward": "openBrowser"
		},
		"8000": {
			"label": "OpenHands Backend", 
			"onAutoForward": "notify"
		}
	},
	"containerEnv": {
		"DOCKER_HOST_ADDR": "host.docker.internal",
		"LLM_MODEL": "pollinations-gpt4",
		"LLM_API_KEY": "not-needed",
		"LLM_BASE_URL": "https://text.pollinations.ai",
		"POLLINATIONS_ENABLED": "true",
		"OPENHANDS_LOG_LEVEL": "INFO"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-python.isort",
				"ms-python.flake8",
				"bradlc.vscode-tailwindcss",
				"esbenp.prettier-vscode"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.formatting.provider": "black",
				"python.linting.enabled": true,
				"python.linting.flake8Enabled": true,
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.organizeImports": true
				}
			}
		}
	}
}
